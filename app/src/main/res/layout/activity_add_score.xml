<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.hackathon.csusm.hackathon.Activities.AddScoreActivity">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:text="@string/score_category"
        android:maxLines="3"
        android:id="@+id/textViewAddScoreCategory"
        android:textStyle="bold"
        android:textColorLink="@color/accent_material_dark"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddScoreCategory"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:layout_below="@+id/textViewAddScoreCategory" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text="@string/Maximum_score"
        android:id="@+id/textViewAddTopScore"
        android:textStyle="bold"
        android:textColorLink="@color/accent_material_dark"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/editTextAddScoreCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:id="@+id/editTextAddTopScore"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:inputType="number"
        android:layout_toRightOf="@id/textViewAddTopScore"
        android:layout_below="@+id/editTextAddScoreCategory" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="24dp"
        android:onClick="addScoreCategory"
        android:text="@string/add_score_category"
        android:id="@+id/buttonAddScoreCategory"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>
