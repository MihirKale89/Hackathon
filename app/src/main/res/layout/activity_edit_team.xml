<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.hackathon.csusm.hackathon.Activities.EditTeamActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team name"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewEditTeamName"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextTeamName"
        android:text=""
        android:gravity="center"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_alignTop="@+id/textViewEditTeamName"
        android:layout_toRightOf="@+id/textViewEditTeamName"
        android:layout_toEndOf="@+id/textViewEditTeamName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/buttonAddTeamMain"
        android:onClick="deleteTeam"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_alignTop="@+id/buttonEditTeamMain"
        android:layout_alignLeft="@+id/editTextTeamName"
        android:layout_alignStart="@+id/editTextTeamName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/buttonEditTeamMain"
        android:onClick="editTeam"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textViewEditTeamName"
        android:layout_alignEnd="@+id/textViewEditTeamName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_challenge_fk"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewEditChallengeNameFK"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/editTextTeamName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerEditChallenge_FK"
        android:layout_alignTop="@+id/textViewEditChallengeNameFK"
        android:layout_toRightOf="@+id/buttonAddTeamMain"
        android:layout_toEndOf="@+id/buttonAddTeamMain" />


</RelativeLayout>
