<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.hackathon.csusm.hackathon.Activities.AddJudgeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judge_name"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewAddJudgeName"
        android:textColor="@android:color/black"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddJudge_name"
        android:text=""
        android:gravity="center"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_below="@+id/textViewAddJudgeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judge_user_id"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:id="@+id/textViewAddJudgeUserId"
        android:layout_marginTop="87dp"
        android:layout_below="@+id/textViewAddJudgeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddJudgeUsername"
        android:text=""
        android:gravity="center"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_below="@+id/textViewAddJudgeUserId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Judge"
        android:id="@+id/buttonAddJudgeMain"
        android:onClick="addJudgeObject"
        android:layout_below="@+id/textViewAddJudgeUserId"
        android:layout_alignRight="@+id/textViewAddJudgeUserId"
        android:layout_alignEnd="@+id/textViewAddJudgeUserId"
        android:layout_marginTop="58dp" />



</RelativeLayout>
