<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.hackathon.csusm.hackathon.Activities.AddChallengeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge name"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewEditChallengeName"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddChallenge_name"
        android:text=""
        android:gravity="center"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_below="@+id/textViewEditChallengeName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Challenge"
        android:id="@+id/buttonAddChallengeMain"
        android:onClick="addChallengeObject"
        android:layout_below="@+id/editTextAddChallenge_name"
        android:layout_alignRight="@+id/textViewEditChallengeName"
        android:layout_alignEnd="@+id/textViewEditChallengeName"
        android:layout_marginTop="99dp" />


</RelativeLayout>
