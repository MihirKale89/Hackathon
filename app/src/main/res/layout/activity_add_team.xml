<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.hackathon.csusm.hackathon.Activities.AddTeamActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_name_label"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewEditTeamName"
        android:layout_marginTop="50dp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddTeam_name"
        android:text=""
        android:gravity="center"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:layout_below="@+id/textViewEditTeamName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Team"
        android:id="@+id/buttonAddTeamMain"
        android:onClick="addTeamObject"
        android:layout_below="@+id/spinnerChallenges"
        android:layout_alignRight="@+id/textViewEditTeamName"
        android:layout_alignEnd="@+id/textViewEditTeamName"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_challenge"
        android:fontFamily="@string/abc_action_bar_home_description_format"
        android:textSize="24dp"
        android:id="@+id/textViewAddTeamChallenge"
        android:layout_marginTop="75dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editTextAddTeam_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerChallenges"
        android:layout_alignTop="@+id/textViewAddTeamChallenge"
        android:layout_toRightOf="@+id/textViewAddTeamChallenge"
        android:layout_toEndOf="@+id/textViewAddTeamChallenge"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp" />


</RelativeLayout>
